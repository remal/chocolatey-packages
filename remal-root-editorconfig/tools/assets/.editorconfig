root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.properties]
charset = latin1

[*.{yml,yaml}]
indent_size = 2

[*.{cmd,bat}]
end_of_line = crlf

[*.{nuspec, ps1, psm1}]
charset = utf-8-bom
end_of_line = crlf
max_line_length = 999
tab_width = 2
indent_size = 2
continuation_indent_size = 2
ij_continuation_indent_size = 2
